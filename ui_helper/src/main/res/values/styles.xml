<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">@dimen/sp_26</item>
    </style>

    <style name="textError">
        <item name="android:textColor">@color/red_error</item>
    </style>

    <style name="textHint">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="tilOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="errorTextAppearance">@style/textError</item>
        <item name="hintTextAppearance">@style/textHint</item>
    </style>

</resources>