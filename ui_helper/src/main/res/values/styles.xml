<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextLink">
        <item name="android:textColor">@color/blue_link</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">@dimen/sp_26</item>
    </style>

    <style name="textError">
        <item name="android:textColor">@color/red_error</item>
    </style>

    <style name="textHint">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="tilOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="errorTextAppearance">@style/textError</item>
        <item name="hintTextAppearance">@style/textHint</item>
   </style>

</resources>